<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23px"
            android:text="原密码"
            android:textColor="@color/black"
            android:textSize="30px" />

        <EditText
            android:id="@+id/original_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="286px"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/please_input_original_password"
            android:inputType="textPassword"
            android:textColor="@color/gray_da"
            android:textColorHint="@color/gray_da"
            android:textCursorDrawable="@drawable/my_cursor"
            android:textSize="30px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_c" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23px"
            android:text="新密码"
            android:textColor="@color/black"
            android:textSize="30px" />

        <EditText
            android:id="@+id/new_password_one"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="286px"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/please_input_new_password"
            android:inputType="textPassword"
            android:textColor="@color/gray_da"
            android:textColorHint="@color/gray_da"
            android:textCursorDrawable="@drawable/my_cursor"
            android:textSize="30px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_c" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23px"
            android:text="新密码"
            android:textColor="@color/black"
            android:textSize="30px" />

        <EditText
            android:id="@+id/new_password_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="286px"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/please_confirm_new_password"

            android:inputType="textPassword"
            android:textColor="@color/gray_da"
            android:textColorHint="@color/gray_da"
            android:textCursorDrawable="@drawable/my_cursor"
            android:textSize="30px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_c" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="560px"
        android:layout_height="110px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="170px"
        android:background="@drawable/gradient_bg"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="32px"

        />
</com.zhy.autolayout.AutoLinearLayout>