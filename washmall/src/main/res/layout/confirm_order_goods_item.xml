<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="228px">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/goods_image"
            android:layout_width="162px"
            android:layout_height="162px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="42px"
            app:riv_corner_radius="10px" />

        <com.xmkj.washmall.base.util.PingFangTextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="208px"
            android:layout_marginTop="42px"
            android:textColor="@color/black"
            android:textSize="24px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="208px"
            android:layout_marginTop="130px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="规格:"
                android:textColor="@color/black"
                android:textSize="22px" />

            <TextView
                android:id="@+id/specification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#808080"
                android:textSize="22px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="208px"
            android:layout_marginTop="168px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="数量:"
                android:textColor="@color/black"
                android:textSize="22px" />

            <TextView
                android:id="@+id/goods_num"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:textColor="#808080"
                android:textSize="22px" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="18px"
                android:textColor="#FF0000"
                android:textSize="22px" />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="37px"
            android:layout_marginRight="37px"
            android:layout_marginTop="22px"
            android:background="@color/f8" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
</layout>