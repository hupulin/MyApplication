<?xml version="1.0" encoding="utf-8"?>
<layout>

<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="230px"
        android:layout_height="244px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginBottom="20px"
        android:background="@drawable/select_wash_item_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wash_image"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="22px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8px"
            >

            <View
                android:layout_width="36px"
                android:layout_height="32px"
                android:id="@+id/add"
                android:background="@drawable/select_wash_add" />

            <TextView
                android:layout_width="65px"
                android:layout_height="32px"
                android:background="@drawable/select_wash_number"
                android:gravity="center"
                android:text="0"
                android:id="@+id/num"
                android:textColor="@color/black"
                android:textSize="26px" />

            <View
                android:layout_width="36px"
                android:layout_height="32px"
                android:id="@+id/reduce"
                android:background="@drawable/select_wash_reduce" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>

</layout>