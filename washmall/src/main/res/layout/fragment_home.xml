<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280px"
        android:background="@drawable/main_home_top_bg">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65px">

            <View
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15px"
                android:id="@+id/locate_position"
                android:background="@drawable/main_locate_icon"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="城市"
                android:maxLength="5"
                android:textColor="@color/white"
                android:textSize="26px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:layout_marginLeft="16px"
                android:layout_weight="1"
                android:background="@drawable/main_home_search_bg">

                <View
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12px"
                    android:background="@drawable/main_home_search_icon" />

                <EditText
                    android:id="@+id/search_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12px"
                    android:background="@color/transparent"
                    android:hint=""
                    android:minWidth="300px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:layout_marginRight="24px"
                android:background="@drawable/main_home_message_icon" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="135px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="380px"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px">

            </com.bigkoo.convenientbanner.ConvenientBanner>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35px"
                android:layout_marginRight="35px"
                android:layout_marginTop="32px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/wash"
                    android:layout_width="110px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:orientation="vertical">


                    <View
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/main_home_wash"
                        app:layout_auto_baseheight="width"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="18px"
                        android:text="我要洗衣"
                        android:textColor="@color/black"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/recharge"
                    android:layout_width="110px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:orientation="vertical">


                    <View
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/main_home_recharge"
                        app:layout_auto_baseheight="width"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="18px"
                        android:text="充值"
                        android:textColor="@color/black"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/order"
                    android:layout_width="110px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:orientation="vertical">


                    <View
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/main_home_order"
                        app:layout_auto_baseheight="width"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="18px"
                        android:text="我的订单"
                        android:textColor="@color/black"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/scan"
                    android:layout_width="110px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:orientation="vertical">


                    <View
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/main_home_scan"
                        app:layout_auto_baseheight="width"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="18px"
                        android:text="扫一扫"
                        android:textColor="@color/black"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="16px"
                android:background="#f2f2f2"
                android:layout_marginTop="50px"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="95px">
                <View
                    android:layout_width="32px"
                    android:layout_height="36px"
                    android:background="@drawable/main_home_wardrobe"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="37px"
                    />
                <View
                    android:layout_width="208px"
                    android:layout_height="24px"
                    android:background="@drawable/main_home_wordrobe_text"
                    android:layout_marginLeft="14px"
                    android:layout_marginTop="42px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:id="@+id/wardrobe_layout"
                >

            </GridLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoRelativeLayout>