<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_marginLeft="24px"
        android:layout_marginTop="65px"
        android:background="@drawable/back_icon" />

    <com.xmkj.washmall.base.util.PingFangTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90px"
        android:layout_marginTop="40px"
        android:text="手机验证码登录"
        android:textColor="@color/black"
        android:textSize="58px" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:layout_marginTop="172px">

        <View
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginLeft="93px"
            android:background="@drawable/login_phone_icon" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="153px"
            android:background="@color/transparent"
            android:gravity="bottom"
            android:hint="请输入您的手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/black_3"

            android:textColorHint="@color/gray_b"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="149px"
        android:layout_marginRight="91px"
        android:layout_marginTop="22px"
        android:background="@color/app_line" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61px"
        android:layout_marginTop="27px">

        <View
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="93px"
            android:background="@drawable/login_verification_icon" />

        <EditText
            android:id="@+id/verification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="153px"
            android:background="@color/transparent"
            android:gravity="bottom"
            android:hint="请输入您的验证码"
            android:inputType="phone"
            android:textColor="@color/black_3"

            android:textColorHint="@color/gray_b"
            android:textSize="24px" />

        <com.ruffian.library.RTextView
            android:id="@+id/get_verification"
            android:layout_width="161px"
            android:layout_height="61px"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="96px"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/app_line"
            android:textSize="24px"
            app:border_color_normal="@color/app_line"
            app:border_width_normal="2px"
            app:corner_radius="61px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="149px"
        android:layout_marginRight="91px"
        android:layout_marginTop="22px"
        android:background="@color/app_line" />

    <com.xmkj.washmall.base.util.PingFangTextView
        android:id="@+id/login"
        android:layout_width="586px"
        android:layout_height="108px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="257px"
        android:background="@drawable/login_common_btn"
        android:gravity="center"
        android:paddingBottom="10px"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="30px"
        android:textStyle="bold" />
</com.zhy.autolayout.AutoLinearLayout>