<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="178px"
            android:layout_marginLeft="13px"
            android:layout_marginRight="13px"
            android:layout_marginBottom="20px"
            android:background="@drawable/wardrobe_item_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58px"
                android:layout_marginTop="40px"
                android:textColor="@color/black"
                android:textSize="30px"
                android:id="@+id/position"
                />
            <com.ruffian.library.RTextView
                android:layout_width="164px"
                android:layout_height="73px"
                android:background="#AF69FE"
                android:layout_marginRight="50px"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:textSize="38px"
                app:corner_radius="73px"
                android:gravity="center"
                android:id="@+id/floor"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="181px"
                android:layout_height="50px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="100px"
                android:background="@drawable/main_wardrobe_statue"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="65px"
                    android:textColor="#0078FF"
                    android:gravity="center"
                    android:textSize="24px"
                    android:id="@+id/statue"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

</layout>