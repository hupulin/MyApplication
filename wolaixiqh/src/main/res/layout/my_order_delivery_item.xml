<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/item_layout"
        android:layout_below="@+id/find_more"
        android:layout_width="710px"
        android:layout_height="220px"
        android:layout_marginTop="6px"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/order_list_bg"
        >

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/order_layout"
            android:layout_width="650px"

            android:layout_height="73px"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/order_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/order_id"
                android:textColor="@color/black"
                android:textSize="24px" />

            <TextView
                android:id="@+id/order_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:layout_toRightOf="@+id/order_text"
                android:text="123456789"
                android:textColor="@color/gray_80"
                android:textSize="24px" />

            <TextView
                android:id="@+id/order_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="36px"
                android:text="待收货"
                android:textColor="@color/app_color"
                android:textSize="24px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_f8" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/info_layout"
            android:layout_width="650px"
            android:layout_height="132px"
            android:layout_below="@+id/order_layout"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/wardrobe_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29px"
                android:text="@string/appointment_wardrobe"
                android:textColor="@color/black"
                android:textSize="24px" />

            <TextView
                android:id="@+id/order_num_layout"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10px"
                android:layout_marginTop="29px"
                android:layout_toRightOf="@+id/wardrobe_text"
                android:text="1号智能柜"
                android:textColor="@color/gray_80"
                android:textSize="24px" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wardrobe_text"
                android:layout_marginTop="19px"
                android:text="@string/address"
                android:textColor="@color/black"
                android:textSize="24px" />
            <TextView
                android:id="@+id/order_pay_layout"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wardrobe_text"
                android:layout_marginRight="10px"
                android:layout_marginTop="19px"
                android:layout_toRightOf="@+id/address_text"
                android:text="杭州市江干区下沙路699号"
                android:textColor="@color/gray_80"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_below="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="13px"/>
</com.zhy.autolayout.AutoRelativeLayout>
</layout>